
<link rel="stylesheet" href="/css/course.css">

<article id="course">
  <%= render 'intro' %>
  <div class="list">
    <% @courses.each do | course | %>    	
	  	<section>
		    <img src="<%= course.cover.list %>">
		    <h4><%= course.name %></h4>
		    <p><%= course.description.gsub(/\n/, '<br >') unless course.description.nil? %></p>
		    <a class="more" href="<%= instruction_course_path( @instruction, course ) %>"></a>
	    </section>
    <% end %>
  </div>
</article>