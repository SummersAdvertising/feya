
<link rel="stylesheet" href="/css/enter.css">


  <div id="content">
  <h3><img src="/images/mb-09.png"></h3>
  
	<%= form_for(resource, :as => resource_name, :url => member_registration_path()) do |f| %>
	<%= devise_error_messages! %>
	
  	<table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <td width="15%">中文姓名</td>
        <td width="85%"><%= f.text_field :username, :class => 'text', :autofocus => true %></td>
      </tr>
	  <tr>
        <td width="15%">電子郵件</td>
        <td width="85%"><%= f.email_field :email, :class => 'text' %></td>
      </tr>
      <tr>
        <td width="15%">手機號碼</td>
        <td width="85%"><%= f.text_field :tel, :class => 'text' %></td>
      </tr>
      <tr>
        <td width="15%">設定密碼</td>
        <td width="85%"><%= f.password_field :password, :class => 'text' %></td>
      </tr>
      <tr>
        <td width="15%">確認密碼</td>
        <td width="85%"><%= f.password_field :password_confirmation, :class => 'text' %></td>
      </tr>
      <tr>
        <td colspan="2">收件地址(可不填)<br><%= f.text_field :address, :class => 'text' %></td>
      </tr>
      <tr>
        <td colspan="2">&nbsp;</td>
      </tr>
      <tr>
        <td colspan="2" align="center" id="next" class="button"><a href="#">登 入</a></td>
      </tr>
    </table>
  </div>


	<% end %>


<script type="text/javascript">
$("ul.step>li").eq(2).addClass("active");

$("#next").click(function(){
	$("#new_member").submit();
});
</script>
