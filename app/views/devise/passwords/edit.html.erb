
  <div class="left">
    <h3 style="color: #00b1ae;font: 300 19px verdana; padding-top: 28px;">{ 重設密碼 }</h3>
    
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
    	
		  <%= devise_error_messages! %>
		  <%= f.hidden_field :reset_password_token %>
  
	    <table width="100%" border="0" cellspacing="0" cellpadding="0">
	      <tr>
	        <td colspan="2"><%= f.password_field :password, :autofocus => true, :class => 'text', :placeholder => "請輸入您想更改的密碼" %></td>
	      </tr>
	      <tr>
	        <td colspan="2"><%= f.password_field :password_confirmation, :class => 'text', :placeholder => "請再次確認密碼" %></td>
	      </tr>
	      
	      <tr>
	        <td colspan="2" align="right" class="button"><a id="submit" href="javascript: document.forms[0].submit();"> 確認更改密碼 </a></td>
	      </tr>
	    </table>
    
		<% end %>
  </div>