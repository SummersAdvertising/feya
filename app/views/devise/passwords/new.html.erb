  <table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td align="center"><h3><img src="/images/mb-06.png"></h3></td>
    <td><div class="button"><a href="/members/sign_up">註冊</a></div></td>
  </tr>
</table>   
