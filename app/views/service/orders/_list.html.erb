<table width="100%" border="0" cellspacing="0" cellpadding="0">
	<tr>
	<th width="25%" align="left">訂單編號</th>
	<th width="35%" align="left">訂單時間</th>
	<th width="20%" align="center">付款方式</th>
	<th width="20%" align="center">處理狀態</th>
	</tr>
		
	<% @orders.each do |order| %>			
	
	<% case order.status %>			
	<% when 'new' %>			
	<% @status = "新訂單" %>
	<% when 'check' %>			
	<% @status = "已收款" %>			
	<% when 'processing' %>			
	<% @status = "處理中" %>			
	<% when 'deliver' %>			
	<% @status = "已出貨" %>
	<% when 'cancel' %>			
	<% @status = "已取消" %>			
	<% end %>

	<tr>
		<td align="left"><%= link_to order.ordernum, service_order_path(order) %></td>
		<td align="left"><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
		<td align="center"><%= order.paytype %></td>
		<td align="center"><%= @status %></td>
		
	</tr>
	<% end %>
	
</table>

	<div class="order-page">
		<%= paginate @orders, :theme => 'page' %>
	</div>
	