<%= form_for [:admin, @category] do | f | %>
  <div class="title-edit">   
    <h3>新增分類</h3>     
    <div class="box">
      <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
          <td width="85%"><%= f.text_field :name, :placeholder => '文章標題' %></td>              
          <td width="15%" align="center"><%= @category.created_at.strftime( '%Y-%m-%d' ) if !@category.new_record? %></td>
        </tr>
      </table>
    </div>
  </div>
	
<div class="button" id="button-down"> <a href="<%= admin_categories_path %>" class="left"><img src="/images/arrow-left.png">返回列表</a>
<a href="javascript: document.forms[0].submit(); " class="right light">儲存發佈<img src="/images/update.png"></a></div>

<% end %>

