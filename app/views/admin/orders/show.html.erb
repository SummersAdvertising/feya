						<% else %>
						<%= link_to "確認訂單成立", admin_order_changestatus_processing_path(@order), :method => :post, :class => "changeStatus active" %>
						<% end %>

						<% when 'check' %>
						<%= link_to "確認訂單成立", admin_order_changestatus_processing_path(@order), :method => :post, :class => "changeStatus active" %>
						
