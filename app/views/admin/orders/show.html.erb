			</table>
			
		</div>

		<% if (@order.orderlogs.count > 0) %>
		<div class="order-log">
			<h4>訂單狀態</h4>
			<table width="100%" border="0" cellspacing="0" cellpadding="0">
				<% @order.orderlogs.each do |log| %>
				<tr>
					<td width="19%" align="center"><%= log.created_at.strftime("%Y-%m-%d %H:%M") %></td>
					<td width="81%"><%= log.description %></td>
				</tr>
				<% end %>
			</table>

		</div>

		<% end %>
