
<script>
$(function(){	
	$('.log').hide()
	$('#log-ctrl').click(function(){			
			$('.log').stop().show().animate({right:0},1000,'easeOutCubic')						
	});
	$('.log a').click(function(){			
			$('.log').stop().animate({right:-185},1000,'easeOutCubic',function(){
					$(this).hide()
				})					
	});
})
</script>



