
<% unless @instructions.nil? %>
<header>
  <h2>學員見證</h2>
<style>
#content > header {height:auto}
#content > header nav{height:auto;width:645px;margin-top:1px}
#content > header nav a{background:#e7e7e7;margin:0 5px 10px 0!important;padding:4px 10px 0 10px!important;height:30px;
border-radius:5px;color:#000}
#content > header nav a:hover,
#content > header nav .active{border:none;background:#77566B;color:#fff}
#content > header nav .add{background:none;opacity:1;filter:alpha(opacity=100);width:auto;}
#content > header nav .add img{margin:0}
#content > header nav .add:hover{background:#e7e7e7;}
</style>

  <nav> 
  	
	<% @instructions.each do | instruction | %>
	
		<a class="<%= 'active' if @instruction.id == instruction.id %>" href="<%= admin_instruction_testimonies_path( instruction ) %>"><%= instruction.name %></a>
	<% end %>
	
</nav>
</header>
    
<article>
  <div class="button" id="button-down">
  <a href="<%= admin_instruction_testimonies_path( @instruction ) %>" data-method="post" class="right light" rel="nofollow">新增見證<img src="/images/add.png"></a></div>
  <div class="list">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <% @testimonies.each do |testimony| %>
      <tr>
        <td><a href="#"><%= link_to testimony.title, edit_admin_instruction_testimony_path(@instruction, testimony) %></a></td>
        <td align="center"><%= testimony.created_at.strftime('%Y-%m-%d') %></td>
      </tr>
      <% end %>
    </table>
  </div>
  <div class="page"> <%= paginate @testimonies %></div>
</article>
<% else %>

<header>
  <h2>尚無法建立任何見證，請先至課程列表建立分類！</h2>
</header>
<% end %>