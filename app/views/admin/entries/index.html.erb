<h1>Listing admin_entries</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Article</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @entries.each do |entry| %>
  <tr>
    <td><%= entry.title %></td>
    <td><%= entry.article_id %></td>
    <td><%= entry.status %></td>
    <td><%= link_to 'Edit', edit_admin_entry_path(entry) %></td>
    <td><%= link_to 'Destroy', admin_entry_path( entry ), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

