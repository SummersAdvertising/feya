<!doctype html>
<html>
<head>
<!--[if lt IE 9]>
<script src="js/html5.js"></script>
<![endif]-->
<meta charset="utf-8">
<meta name="Robots" content="index,follow"/>
<meta http-equiv="content-language" content="zh-TW" />
<title>霏亞後台管理系統</title>
<link rel="stylesheet" href="/css/reset.css">
<link rel="stylesheet" href="/css/admin/login.css">
	<%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
<%= form_for(@admin, :url => admin_checkAdmin_path(@admin)) do |f| %>

<table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td align="center" valign="middle">
    <h1><img src="/images/logo.png"></h1>
    <div class="login-input">
      <img src="/images/admin.png" title="帳號"> <%= f.text_field :email, :autocomplete => "off", :placeholder => "電子郵件", :class => 'text' %></div>
    <div class="login-input">
    <img src="/images/key.png" title="密碼"> <%= f.password_field :password, :autocomplete => "off", :placeholder => "密碼",  :class => 'text'  %><input id='btnLogin' name="" type="button" class="button">
    </div>
    <!--div class="msg">查無此帳號；帳號密碼有誤</div-->
    </td>
  </tr>
</table>
<% end %>
<div id="footer">
Copyright © Summers
</div>
</body>
</html>


<script type="text/javascript">

$("#btnLogin").click(function(){
  $("form").submit();
});

$("#admin_password").keydown(function(event){
  if (event.keyCode == 13){
    $("form").submit();
  }
});
</script>