    <a href="/orders/cart">購物車</a> </div>
    <ul id="nav">
      <li id="nav-1" class="<%= 'active' if params[:controller] == 'classes' || params[ :controller ] == 'courses' %>"><a href="<%= classes_path %>">專業課程</a>
        <ul class="menu">
          <li><a href="#">專業美容證照</a></li>
          <li><a href="#">美容美體實務技術</a></li>
          <li><a href="#">國際時尚造型</a></li>
        </ul>
      </li>
      <li id="nav-2" class="<%= 'active' if params[:controller] == 'testimonies' %>"><a href="<%= testimonies_path %>">學員見證</a></li>
      <li id="nav-3" class="<%= 'active' if params[:pagename] == 'professional' %>"><a href="<%= page_pages_path( :pagename =>  'professional' ) %>">專業師資</a></li>
      <a id="home" href="<%= root_url %>"></a>
