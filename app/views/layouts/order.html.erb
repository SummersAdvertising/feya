<script>
	$(document).ready(function() {		
	<% if !flash[ :notice ].nil? %>
		Alertify.log.success('<%= flash[ :notice ] %>');
	<% elsif !flash[ :warning ].nil? %>
		Alertify.log.error("<%= flash[ :warning ].html_safe %>");
	<% end %>
	
	});
</script>

</head>

<body>
<header _height='none'>
  <div id="top">   
  <a href="<%= root_path %>" style="display: block;position: absolute;width: 160px;height: 100px; text-decoration: none;">&nbsp;</a>
  	<% if current_member -%>
  		<%= current_member.username -%> 您好 │<a href="<%= service_root_path -%>">帳戶</a> | <%= link_to "登出 ", destroy_member_session_path, :method => :delete -%> │
	 <% else -%>  	
	 	<%= link_to "會員登入", new_member_session_path -%> │
  	<% end -%>
<a href="/orders/cart">購物車</a> <img src="/images/sc-01.png"> <a id="back" href="<%= root_url %>">回首頁 &gt;</a></div>
</header>

<%= yield %>

<%= render 'layouts/footer' %>

<script>


    var b = $('[_height=auto]');

    if (b.length <= 0) return false;
    var c = $(this),
        $body = $('body'),
        $none = $('[none=true]'),
        autoDivHeight = b.outerHeight(true),
        autoDivBorder = autoDivHeight - b.height(),
        delBodyMargin = parseInt($body.css('marginTop')) + parseInt($body.css('marginBottom')),
        none = $none.outerHeight(true) - $none.height(),
        delHeight = 0;
    $('[_height=none]').each(function () {
        delHeight += $(this).outerHeight(true)
    });

    function fullHeight() {
        var a = c.height() - delHeight - delBodyMargin - autoDivBorder - none;
        if (a > autoDivHeight) {
            b.height(a)
        }
    }
    c.resize(function () {
        fullHeight()
    });

$(window).load(function () {
    fullHeight()
});
	
</script>
</body>
</html>
